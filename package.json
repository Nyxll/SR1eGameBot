{
  "name": "sr1egamebot",
  "version": "1.0.0",
  "description": "Shadowrun 1e Game Bot for Discord",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": ["shadowrun", "discord", "bot", "rpg", "dice"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.0.0",
    "mongodb": "^6.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "ft_*.js",
      "!ft_help.js",
      "db.js",
      "api.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
